{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<div class="card">
    <article class="{{post_class}}">
        <figure>
            <a href="{{url}}"><img src="{{image}}"/></a>
            <figcaption>
                <a class="post-title" href="{{url}}">{{{title}}}</a>
                <p class="tags">{{tags}}</p>
            </figcaption>
        </figure>
    </article>
</div>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
