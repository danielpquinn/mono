{{!< default}}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">

    {{> nav}}

    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

<main class="content" role="main">
    <div class="card">
        <article class="{{post_class}}">
        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <section class="post-meta">
                    <!-- <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> -->
                    <p class="tags">{{tags}}</p>
                </section>
            </header>

            <section class="post-content">
                {{content}}
            </section>

        {{/post}}
        </article>
    </div>

    <div class="pagination">
        <a class="back" href="{{@blog.url}}" title="{{@blog.title}}"><i class="fa fa-chevron-left"></i></a>
        <span class="page-number">Back to projects</span>
    </div>    

</main>
